<div class="signin">
	<div class="signin_main">
		<%= form_tag sessions_path do %>

			<%= label_tag :email, "电子邮件地址" %>
			<%= text_field_tag :email, params[:email], placeholder: '输入邮箱...' %>

			<%= label_tag :password, "输入密码" %>
			<%= password_field_tag :password, params[:password], placeholder: '输入密码...' %>

			<br/>
			<%= check_box_tag :remember_me, 1, params[:remember_me] %>
			记住我
			<%= submit_tag "登录", class: "btn btn-primary" %>

		<% end %>

		<%= link_to "注册", signup_path %>
		<%= link_to "忘记密码？", new_password_reset_path  %>
	</div>
    
    <div class="signin_github">
    	<h4>其他方式登录</h4> </br>
	    <%= link_to image_tag("github_logo.gif"), "/auth/github" %> </br> </br>
	    <%= link_to image_tag("qq_logo.png"), "/users/qqlogin" %>
	</div>

	<div class="class"></div>

</div>