<h3>首页</h3>
<h4>共有<%= @posts.count %>篇文章</h4>
<ol class="posts">
	<% @posts.each do |post| %>
		<li>
			<div class="one_post">
				<!-- 用户头像 -->
				<div class="user_avatar">
					<%= post.user.avatar? ? image_tag(post.user.avatar_url(:small)) : image_tag("uu.jpg", :height => '80', :width => '80') %>
				</div>
				<!-- 文章内容 -->
				<%= link_to post do %>
					<b>——</b>
					<p class="title">
						<%= truncate(strip_tags(post.title), length: 20) %>
					</p>
					<div class="content">
						<%= truncate(strip_tags(post.content), length: 100) %>
					</div>
					<p class="timestamp">
						<%= time_ago_in_words(post.created_at) %> ago.
					</p>
				<% end %>
			<!-- 
				<p class="title"><%= link_to post.title, post %></p>
				<div class="line"></div>
				<p class="content"><%= link_to truncate(strip_tags(post.content), length: 100), post %></p> -->
				<!-- <p class="timestamp">
					<%= time_ago_in_words(post.created_at) %> ago.
				</p> -->
			</div>
		</li>
	<% end %>
	<div class="class"></div>
</ol>
<%= will_paginate @posts %>