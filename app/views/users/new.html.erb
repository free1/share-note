<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages' %>

	<%= f.label :email, "电子邮件地址" %>
	<%= f.text_field :email %>

	<%= f.label :password, "创建密码" %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "确认密码" %>
	<%= f.password_field :password_confirmation %>

	<%= f.label :name, "选择你的用户名" %>
    <%= f.text_field :name %>

    <br/>
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    下次自动登录
	<%= f.submit "创建我的帐号", class: "btn btn-large btn-primary" %>

<% end %>